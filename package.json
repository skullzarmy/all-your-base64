{
  "name": "ayb64",
  "version": "1.0.0",
  "description": "Comprehensive base64 CLI with 8 output formats, MCP server for AI agents, MIME detection, metadata extraction, data URIs, and modern TypeScript architecture. Beyond basic conversion.",
  "main": "dist/index.js",
  "bin": {
    "ayb64": "dist/cli.js",
    "all-your-base64": "dist/cli.js",
    "ayb64-mcp": "dist/mcp-server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "mcp": "tsx src/mcp-server.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "benchmark": "tsx scripts/benchmark.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm test",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "base64",
    "encoding",
    "cli",
    "converter",
    "utility",
    "file",
    "mcp",
    "model-context-protocol",
    "ai",
    "nodejs"
  ],
  "author": "Joe Peterson",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.9.3",
    "file-type": "^19.0.0",
    "mime-types": "^2.1.35",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skullzarmy/all-your-base64.git"
  },
  "bugs": {
    "url": "https://github.com/skullzarmy/all-your-base64/issues"
  },
  "homepage": "https://github.com/skullzarmy/all-your-base64#readme"
}
